{%- assign tags = site.tags | sort -%}
{%- for tag in tags -%}
    <span>
        <a class="icon" href="/tags/{{ tag[0] }}">
            <code>
                <div class="icon fa fa-tag fa-xs"></div>
                {{ tag[0] }}
                ({{ tag | last | size }})</code>
        </a><br/><br/>
    </span>
{%- endfor -%}
