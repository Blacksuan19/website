{%- assign tags = site.tags | sort -%}
{%- for tag in tags -%}
  <span>
    <a
      class="icon fa fa-tag fa-xs"
      href="/tags/{{ tag[0] }}"
      style="font-size: {{ tag | last | size  |  times: 4 | plus: 80  }}%;padding: 10px;font-weight: 300">
      &ThickSpace;{{ tag[0] | replace: '-', ' ' | capitalize }}
      ({{ tag | last | size }})
    </a>
  </span>
{%- endfor -%}
